{
  "compilerOptions": {
    "lib": ["ES2017"],
    "module": "CommonJS",
    "target": "ES2017",
    "declaration": true,
    "noUnusedLocals": false,
    "noImplicitAny": true,
    "removeComments": true,
    "moduleResolution": "Node",
    "rootDir": "src",
    "outDir": "lib"
  },
  "include": ["./src/**/*.tsx", "./src/**/*.ts"],
  "exclude": [
    "lib",
    "it",
    "test",
    "node_modules",
    "**/__*__/**",
    "./src/**/*.spec.tsx",
    "./src/**/*.spec.ts"
  ]
}
