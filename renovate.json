{
  "extends": [
    ":dependencyDashboard",
    ":ignoreUnstable",
    ":updateNotScheduled",
    ":automergeDisabled",
    ":npm",
    ":label(dependencies)",
    ":enableVulnerabilityAlertsWithLabel(security)",
    ":prHourlyLimitNone",
    ":prConcurrentLimitNone",
    "group:monorepos",
    "group:recommended",
    "workarounds:all",
    "npm:unpublishSafe"
  ],
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "matchPackagePatterns": [
        "*"
      ],
      "semanticCommitType": "chore",
      "semanticCommitScope": "deps-dev"
    },
    {
      "matchDepTypes": [
        "dependencies",
        "require"
      ],
      "semanticCommitType": "chore",
      "semanticCommitScope": "deps"
    }
  ]
}
